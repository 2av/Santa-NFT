                        <ul class="dropdown-menu pull-right">
                            <li><a href="/BlogCategory/Create">Add New</a></li>

                        </ul>
                    </li>
                </ul>*@
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Blog Category</th>
                                <th colspan="2">Action</th>
                             

                            </tr>
                        </thead>
                        @*<tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Display Order</th>
                                <th>Edit</th>
                            </tr>
                        </tfoot>*@
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BlogCategoryName</td>
                                  
                                     
                                        <td><a href="/BlogCategory/Create/@item.BlogCategoryId">Edit</a></td>
                                        <td><span class="btndelete" data-id="@item.BlogCategoryId">Delete</span></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Exportable Table -->
